  <% if !logged_in? %>
          <%= display_error %>
        <div id="auth_form">
          <div id="login_form"><h2>Already a member? Login: </h2>
            <form action='/login' method='POST'>
              <input type='text' name='user[username]' placeholder="Username"><br>
              <input type='password' name='user[password]' placeholder="Password">
              <input type='submit' value='Login'>
            </form>
          </div>
        <br><h3 style="color:rgb(61, 30, 30)">~ OR ~</h3><br>
          <div id="signup_form">
            <form action='/signup' method='POST'>
              <input class='login' type='text' name='user[username]' placeholder="Create Username"><br>
              <input class='login' type='password' name='user[password]' placeholder="Password"><br>
              <input class='login' type='password' name='password_confirm' placeholder="Confirm Password"><br>
              <input type='submit' value='Sign Up'>
            </form>
          </div>
        </div>
<% end %>
